# EditorConfig is awesome: https://EditorConfig.org

# 顶级配置，这是根配置文件
root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# JavaScript、Vue、TypeScript等文件配置
[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# CSS、SCSS文件配置
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML文件配置
[*.html]
indent_style = space
indent_size = 2

# Markdown文件配置
[*.md]
trim_trailing_whitespace = false

# 配置文件
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
